<local:BaseDialog x:Class="AcgnuX.WindowX.Dialog.EditDnsRecordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:AcgnuX.WindowX.Dialog"
        mc:Ignorable="d"
        Title="{StaticResource EditDnsRecord}" Height="205" Width="400" Style="{StaticResource DialogWindowBaseStyle}">
    <Window.Resources>
        <Style TargetType="Button" x:Key="DnsEditConfirmButtonStyle" BasedOn="{StaticResource FormConfirmButtonStyle}">
            <Setter Property="Margin" Value="0 5 0 0" />
        </Style>
    </Window.Resources>

    <Window.Icon>
        <DrawingImage>
            <DrawingImage.Drawing>
                <DrawingGroup>
                    <GeometryDrawing Brush="Gray" Geometry="{StaticResource Icon_Edit}" />
                </DrawingGroup>
            </DrawingImage.Drawing>
        </DrawingImage>
    </Window.Icon>

    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
            <!--子域名-->
            <DockPanel Style="{StaticResource FormDockBaseStyle}">
                <TextBlock Text="{StaticResource SubDomian}" Style="{StaticResource FormFieldTextBlock}" />
                <TextBox Name="TextBlockDomain" Style="{StaticResource TextBoxBase}" Text="{Binding Path=MdnsRecord.Name}"/>
            </DockPanel>
            <!--记录值-->
            <DockPanel Style="{StaticResource FormDockBaseStyle}">
                <TextBlock Text="{StaticResource DnsRecordValue}" Style="{StaticResource FormFieldTextBlock}"/>
                <TextBox Name="TextBlockValue" Style="{StaticResource TextBoxBase}" Text="{Binding Path=MdnsRecord.Value}"/>
            </DockPanel>
            <!--记录类型-->

            <!--容器排列-->
            <DockPanel>
                <TextBlock Text="{StaticResource DnsRecordType}" Style="{StaticResource FormFieldTextBlock}"/>
                <ListBox Name="DnsTypeListBox" BorderBrush="{x:Null}" Background="Transparent">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" IsItemsHost="True" VerticalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>

                    <!--每个项的样式-->
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Padding" Value="0 8"/>
                            <Setter Property="Width" Value="57" />
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Margin" Value="0 0 5 0"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="BorderBrush" Value="#FFd9d9d9"/>
                            <Setter Property="Background" Value="{StaticResource DataGridItemBackgroundColorBrush}" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                        <Border x:Name="Bd" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}" SnapsToDevicePixels="true" CornerRadius="2">
                                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <MultiTrigger>
                                                <MultiTrigger.Conditions>
                                                    <Condition Property="IsMouseOver" Value="True"/>
                                                </MultiTrigger.Conditions>
                                                <Setter Property="Background" TargetName="Bd" Value="{DynamicResource WhiteBgHoverColorBrush}"/>
                                            </MultiTrigger>
                                            <MultiTrigger>
                                                <MultiTrigger.Conditions>
                                                    <Condition Property="Selector.IsSelectionActive" Value="False"/>
                                                    <Condition Property="IsSelected" Value="True"/>
                                                </MultiTrigger.Conditions>
                                                <Setter Property="Background" TargetName="Bd" Value="{DynamicResource ButtonMainColorBrush}"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </MultiTrigger>
                                            <MultiTrigger>
                                                <MultiTrigger.Conditions>
                                                    <Condition Property="Selector.IsSelectionActive" Value="True"/>
                                                    <Condition Property="IsSelected" Value="True"/>
                                                </MultiTrigger.Conditions>
                                                <Setter Property="Background" TargetName="Bd" Value="{DynamicResource ButtonMainColorBrush}"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </MultiTrigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    
                    <ListBoxItem Content="A" />
                    <ListBoxItem Content="CNAME" />
                    <ListBoxItem Content="TXT" />
                    <ListBoxItem Content="MX" />
                    <ListBoxItem Content="NS" />
                </ListBox>
            </DockPanel>
        </StackPanel>
        <Button x:Name="ConfirmButton" Content="{StaticResource Confirm}" Click="OnConfirmClick" Style="{DynamicResource DnsEditConfirmButtonStyle}" />
    </DockPanel>
</local:BaseDialog>
