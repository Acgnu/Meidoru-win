<UserControl x:Class="AcgnuX.Controls.BusyIndicator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AcgnuX.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="400">
    <UserControl.Resources>
        <Color x:Key="MaskColor">#B2FFFFFF</Color>
        <SolidColorBrush x:Key="MaskColorBrush" Color="{StaticResource MaskColor}" />
        <Storyboard x:Key="FadeOutStoryboard">
            <DoubleAnimation x:Name="fadeAnimation" 
                             BeginTime="00:00:00" 
                             Storyboard.TargetName="MaskLayer" 
                             Storyboard.TargetProperty="Opacity" 
                             From="1" To="0" 
                             Duration="0:0:0.3">
            </DoubleAnimation>
        </Storyboard>
    </UserControl.Resources>
    <Grid x:Name="MaskLayer" Background="{StaticResource MaskColorBrush}">
        <local:GifImage x:Name="AnimateImg" Width="100" Height="100" />
    </Grid>
</UserControl>
